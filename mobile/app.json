{
  "expo": {
    "name": "FitForge",
    "slug": "fitforge",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1D"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.avishkagihan.fitforge",
      "infoPlist": {
        "NSFaceIDUsageDescription": "FitForge uses Face ID to provide secure and convenient login access to your fitness data.",
        "NSCameraUsageDescription": "FitForge needs camera access to scan exercise demonstration videos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1A1A1D"
      },
      "package": "com.avishkagihan.fitforge",
      "permissions": ["android.permission.USE_BIOMETRIC", "android.permission.USE_FINGERPRINT"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "apiUrl": "http://10.0.2.2:3000/api",
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Inter-Regular.ttf",
            "./assets/fonts/Inter-Bold.ttf",
            "./assets/fonts/Inter-SemiBold.ttf"
          ]
        }
      ]
    ]
  }
}
